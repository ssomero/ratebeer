<p id="notice"><%= notice %></p>

<p>
  <h3> <%= @beer.name %></h3>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<p>
  <% if @beer.ratings.empty? %>
    Beer hasn't been rated yet!
    <% else %>
        Beer has been rated <%= @beer.ratings.count %> times, average score <%= round(@beer.rating_average) %>
      <% end %>
</p>

<% if current_user %>
    <h4>Give a rating:</h4>
    <p>(score must be 1-50)</p>

    <%= form_for(@rating) do |f| %>
        <%= f.hidden_field :beer_id %>
        score: <%= f.number_field :score %>
        <%=f.submit class:"btn btn-success"%>
        <% end %>

        <br>

        <%= edit_and_destroy_buttons(@beer) %>

<% end %>




