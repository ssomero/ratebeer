

<h2><%= @brewery.name %></h2>
  <% if not @brewery.active %>
    <span class="label label-info">retired</span>
    <% end %>
<p>
  <i>Established in <%= @brewery.year %></i>
</p>
<p>Number of beers: <%=@brewery.beers.count%></p>

<tbody>
<% @brewery.beers.each do |beer| %>

      <td><%= link_to beer.name, beer %></td>

<% end %>
</tbody>


<p>
  <% if @brewery.ratings.empty? %>
      Brewery doesn't have rated beers!
  <% else %>
      Brewery has <%= pluralize(@brewery.ratings.size, 'rating') %>, average <%= round(@brewery.rating_average) %>
  <% end %>
</p>

<% if current_user %>
<%= edit_and_destroy_buttons(@brewery) %>
<%end%>



