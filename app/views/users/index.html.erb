<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @active_users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
      </tr>
    <% end %>

    <% if is_admin %>
  <% @frozen_users.each do |frozen| %>
    <tr>
      <td><%= link_to frozen.username, frozen %><span class="label label-info">account frozen</span></td>
    </tr>
      <% end %>
      <% end %>
  </tbody>
</table>

